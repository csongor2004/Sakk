<Window x:Class="Sakktabla.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BitChess GUI" Height="700" Width="750" Background="#2c3e50" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="220"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0">
            <TextBlock Name="TurnInfo" Text="Világos jön" Foreground="White" FontSize="20" HorizontalAlignment="Center" Margin="10"/>
            <UniformGrid Name="BoardDisplay" Rows="8" Columns="8" Width="480" Height="480" Margin="10"/>
        </StackPanel>

        <StackPanel Grid.Column="1" Background="#34495e">
            <TextBlock Text="IDŐMÉRŐ" Foreground="White" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="10,15,10,10"/>
            <TextBlock Name="WhiteTimeLabel" Text="Világos: 10:00" Foreground="White" FontSize="16" Margin="15,5"/>
            <TextBlock Name="BlackTimeLabel" Text="Sötét: 10:00" Foreground="White" FontSize="16" Margin="15,5"/>

            <Separator Margin="10,20" Background="#2c3e50"/>
            <Button Content="Feladás" Click="Resign_Click" Margin="15,5" Height="35"/>
            <Button Content="Döntetlen ajánlása" Click="Draw_Click" Margin="15,5" Height="35"/>
            <Button Content="Új játék" Click="Reset_Click" Margin="15,20" Height="35"/>
        </StackPanel>
    </Grid>
</Window>