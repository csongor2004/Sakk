<Window x:Class="Sakktabla.PromotionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Promotion" Height="150" Width="400" WindowStyle="ToolWindow" WindowStartupLocation="CenterOwner">
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Button Content="Queen" Click="Choice_Click" Margin="5" Width="80" Height="80"/>
        <Button Content="Rook" Click="Choice_Click" Margin="5" Width="80" Height="80"/>
        <Button Content="Bishop" Click="Choice_Click" Margin="5" Width="80" Height="80"/>
        <Button Content="Knight" Click="Choice_Click" Margin="5" Width="80" Height="80"/>
    </StackPanel>
</Window>